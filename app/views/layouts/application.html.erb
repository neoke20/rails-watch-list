<!DOCTYPE html>
<html>
  <head>
    <title>RailsWatchList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <a class="navbar-brand mx-4" href="/lists">
      <i style="font-size: 28px;" class="fas fa-film"></i>
    </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <%= link_to new_list_path do %>
            <i class="fas fa-clipboard-list" style="font-size: 24px"></i> Add list
          <% end %>
        </ul>
      </div>
    </div>

    <%= yield %>
    <div class="footer">
      <div class="footer-links">
        <a href="https://www.github.com/neoke20" target="_blank"><i class="fab fa-github"></i></a>
        <a href="https://www.linkedin.com/in/konczakkevin/" target="_blank"><i class="fab fa-linkedin"></i></a>
      </div>
    </div>
  </body>
</html>
