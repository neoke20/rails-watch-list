<div class="container">
  <% if @lists.any? %>
    <h1 class="my-4 text-center">All the lists!</h1>
  <% else %>
    <h1 class="my-4 text-center">No list yet :(</h1>
  <% end %>
  <div class="cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <%= render 'lists/customized_card', list: list %>
      <% else %>
        <%= render 'lists/card', list: list %>
      <% end %>
    <% end %>
  </div>
</div>
