<div class="container text-center my-4">
<div class="d-flex justify-content-between">
  <div>
    <h1 class="mb-4"><%= @list.name.capitalize %><span style="font-size: 24px;"> <%= link_to list_path(@list), method: :delete, data: { confirm: "Do you really want to delete the #{@list.name.capitalize} list?"} do %><i class="far fa-trash-alt"></i><% end %></span></h1>
  </div>
  <div class="stick-top">
    <%= link_to new_list_bookmark_path(@list) do %>
      <span style="font-size: 28px;" class="sticky-top"><i class="fas fa-photo-video"></i> <i class="fas fa-plus"></i></span>
    <% end %>
  </div>
</div>
  <div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url, :size => "286x429", class: 'img-relative' %>
      <div class="img-info"><%= bookmark.movie.overview %></div>
      <div class="card-body">
        <p><strong><%= bookmark.movie.title %></strong></p>
        <p class="card-text"><%= bookmark.comment %></p>
        <% if bookmark.movie.rating < 7.0 %>
          <span class="rating-pill-red"><%= bookmark.movie.rating %></span></p>
        <% elsif bookmark.movie.rating > 7.0 && bookmark.movie.rating < 8 %>
          <span class="rating-pill-orange"><%= bookmark.movie.rating %></span></p>
        <% else %>
          <span class="rating-pill-green"><%= bookmark.movie.rating %></span></p>
        <% end %>
        <%= link_to 'Delete', list_bookmark_path(bookmark), class: 'btn btn-danger', method: :delete, data: { confirm: "Do you really want to delete #{bookmark.movie.title} from the list?"} %>
      </div>
    </div>
  <% end %>
  </div>
</div>
